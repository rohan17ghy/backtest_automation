{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es6",
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "module": "es6",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "paths": {
        "@/*": ["./src/*"],
        "@public/*": ["./public/*"],
      },
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"],
}